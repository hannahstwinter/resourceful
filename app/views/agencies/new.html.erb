<div class="add-agency">
  <%= form_for :agency, :url => {:action => "create"} do |f| %>
    <%= f.label :name %><br />
    <%= f.text_field :name %><br />
    <%= f.label :street %><br />
    <%= f.text_field :street %><br />
    <%= f.label :city %><br />
    <%= f.text_field :city %><br />
    <%= f.label :state %><br />
    <%= f.text_field :state %><br />
    <%= f.label :phone %><br />
    <%= f.text_field :phone %><br />
    <%= f.label :short_description %><br />
    <%= f.text_area :short_description, :size => "24x6" %><br />
    <%= f.label :tag %>s, separated by commas<br />
    (eg: childcare,GLBTQ,alcoholism)<br />
    <%= f.text_field :tag %><br />
    <%= f.submit %>
  <% end %>
</div>