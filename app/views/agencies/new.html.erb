<div id="bkg" class="main">
  <p>Enter the information for the agency you wish to add to Resourceful:</p>
  <%= form_for :agency, :url => {:action => "create"} do |f| %>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %><br />
    </div>
    <div class="field">
      <%= f.label :street %><br />
      <%= f.text_field :street %><br />
    </div>
    <div class="field">
      <%= f.label :city %><br />
      <%= f.text_field :city %><br />
    </div>
    <div class="field">
      <%= f.label :state %><br />
      <%= f.text_field :state %><br />
    </div>
    <div class="field">
      <%= f.label :phone %><br />
      <%= f.text_field :phone %><br />
    </div>
    <div class="field">
      <%= f.label :short_description %><br />
      <%= f.text_area :short_description, :size => "24x6" %><br />
    </div>
    <div class="field">
      <%= f.label :tag %>s, separated by commas<br />
      (eg: childcare,GLBTQ,alcoholism)<br />
      <%= f.text_field :tag %><br />
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>