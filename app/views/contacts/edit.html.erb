<div class="bkg main">
  <p>Edit your contact's information:</p>
  <%= form_for @contact, :url => {:action => "update"} do |f| %>
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %><br />
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %><br />
    <%= f.label :phone %><br />
    <%= f.text_field :phone %><br />
    <%= f.label :notes %><br />
    <%= f.text_area :notes, :size => "24x6" %><br />
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
  <div id="delete">
    <p><%= link_to "Delete this Contact", "/contacts/#{@contact.id}", :method => :delete %></p>
</div>
</div>