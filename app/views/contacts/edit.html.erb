<div class="no-bkg main">
  <h3>Edit your contact's information:</h3>
  <%= form_for @contact, :url => {:action => "update"} do |f| %>
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %><br />
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %><br />
    <%= f.label :phone %><br />
    <%= f.text_field :phone %><br />
    <%= f.label :notes %><br />
    <%= f.text_area :notes, :size => "24x6" %><br />
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
  <div id="delete">
    <p>Do you wish to delete this contact?</p>
    <p><%= link_to "Yes, Delete this Contact", "/contacts/#{@contact.id}", :method => :delete, :confirm => "Are you sure?" %></p>
  </div>
</div>
